<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/message_back_pressed_left"/>
        <TextView
            android:id="@+id/tv_month_showname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="May 2015"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/message_back_pressed_right"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_now"
        android:layout_alignBaseline="@id/ll_head"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:clickable="true"
        android:text="Now"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/selector_text_click"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_calendar"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>